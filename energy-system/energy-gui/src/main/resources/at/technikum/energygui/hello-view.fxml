<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="at.technikum.energygui.EnergyController"
      spacing="12">
  <padding>
    <Insets top="16" right="16" bottom="16" left="16"/>
  </padding>


  <!-- Kopf: aktuelle Prozentwerte -->
  <GridPane hgap="12" vgap="6">
    <columnConstraints>
      <ColumnConstraints percentWidth="22"/>
      <ColumnConstraints percentWidth="20"/>
      <ColumnConstraints percentWidth="58"/>
    </columnConstraints>

    <Label text="Community Pool" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <Label fx:id="lblCommunityDepleted" text="— %" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <ProgressBar fx:id="pbCommunity" prefWidth="400" GridPane.rowIndex="0" GridPane.columnIndex="2"/>

    <Label text="Grid Portion" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <Label fx:id="lblGridPortion" text="— %" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <ProgressBar fx:id="pbGrid" prefWidth="400" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
  </GridPane>

  <HBox spacing="10">
    <Button text="refresh" onAction="#onRefresh"/>
    <CheckBox fx:id="cbAutoRefresh" text="auto refresh (5s)"/>
  </HBox>

  <Separator/>

  <!-- Zeitraum Start/End (Datum + Uhrzeit) -->
  <HBox spacing="8" alignment="CENTER_LEFT">
    <Label text="Start"/>
    <DatePicker fx:id="dpStart"/>
    <ComboBox fx:id="cbStartHour" prefWidth="70"/>
    <ComboBox fx:id="cbStartMin" prefWidth="70"/>

    <Label text="End" style="-fx-padding:0 0 0 24;"/>
    <DatePicker fx:id="dpEnd"/>
    <ComboBox fx:id="cbEndHour" prefWidth="70"/>
    <ComboBox fx:id="cbEndMin" prefWidth="70"/>

    <Button text="show data" onAction="#onShowData"/>
  </HBox>

  <!-- Tabelle -->
  <TableView fx:id="tblHistory" prefHeight="320">
    <columns>
      <TableColumn fx:id="colHour" text="Hour" prefWidth="200"/>
      <TableColumn fx:id="colProduced" text="Community Produced"/>
      <TableColumn fx:id="colUsed" text="Community Used"/>
      <TableColumn fx:id="colGrid" text="Grid Used"/>
    </columns>
  </TableView>

  <!-- Summen -->
  <HBox spacing="16">
    <Label text="Community produced:"/>
    <Label fx:id="lblSumProduced" text="0 kWh"/>
    <Label text="Community used:"/>
    <Label fx:id="lblSumUsed" text="0 kWh"/>
    <Label text="Grid used:"/>
    <Label fx:id="lblSumGrid" text="0 kWh"/>
  </HBox>

</VBox>